{% extends 'base.jinja2' %}

{% block subtitle %}All Tasks{% endblock subtitle %}

{% block content %}
<ul>
    {% for task in tasks %}
    <li>
        {{ task.taskname }} {% if task.completed %}Done on {{ task.completed }} by {{ task.completed_by.username }}{% else %} Undone {% endif %}
    </li>
    {% endfor %}
</ul>
{% endblock content %}